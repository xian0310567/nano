generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int     @id @default(autoincrement())
  userId         String
  email          String  @unique
  name           String?
  standby        Standby[]
}

model Standby {
  id            Int     @id @default(autoincrement())
  url           String  @db.LongText
  uploadDate    DateTime
  author        User    @relation(fields: [authorId], references: [id])
  authorId      Int
  state         StandbyState  @default(upload)
}

enum StandbyState {
  reject
  upload
  complete
}